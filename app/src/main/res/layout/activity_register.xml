<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/group"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rohit.demo.Register">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Register"
        android:ems="10"
        android:layout_marginTop="215dp"
        android:id="@+id/Label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email"
        android:backgroundTint="@color/white"
        android:hint="Email"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:textSize="10sp"
        android:layout_below="@+id/DriverName"
        android:layout_alignLeft="@+id/DriverName"
        android:layout_alignStart="@+id/DriverName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Label2"
        tools:text="  Gender"
        android:backgroundTint="@color/white"
        android:textSize="10sp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="12dp" />

    <RadioButton
        android:text="Female"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/female"
        android:backgroundTint="@color/white"
        android:layout_alignTop="@+id/male"
        android:layout_toRightOf="@+id/male"
        android:layout_toEndOf="@+id/male"
        android:textSize="10sp" />

    <RadioButton
        android:text="Male"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/male"
        android:layout_marginLeft="37dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="37dp"
        android:layout_alignTop="@+id/Label2"
        android:layout_toRightOf="@+id/Label2"
        android:layout_toEndOf="@+id/Label2"
        android:textSize="10sp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/female"
        android:id="@+id/editText7"
        android:backgroundTint="@color/white"
        android:textSize="10sp"
        android:hint="Password"
        android:layout_alignLeft="@+id/Label2"
        android:layout_alignStart="@+id/Label2" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText7"
        android:backgroundTint="@color/white"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:id="@+id/editText8"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignEnd="@+id/editText7"
        android:hint="Confirm Password"
        android:textSize="10sp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/DriverName"
        android:backgroundTint="@color/white"
        android:hint="Enter Name"
        android:layout_marginTop="16dp"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:textSize="10sp"
        android:layout_below="@+id/Label"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/signin"
        android:id="@+id/imageView2"
        android:layout_below="@+id/editText8"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
